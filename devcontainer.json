{
    "name": "Latex",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "james-yu.latex-workshop",
                "valentjn.vscode-ltex"
            ]
        },
        "settings": {
            "ltex.additionalRules.enablePickyRules": true,
            "latex-workshop.latex.recipes": [
                {
                    "name": "latexmk (latexmkrc)",
                    "tools": [
                        "latexmk_rconly",
                    ]
                },
                {
                    "name": "latexmk fast",
                    "tools": [
                        "latexmk_fast",
                    ]
                }
            ],
            "latex-workshop.latex.outDir": "build",
            "latex-workshop.formatting.latex": "latexindent",
            "[latex]": {
                "editor.defaultFormatter": "James-Yu.latex-workshop"
            },
            "latex-workshop.latex.tools": [
                {
                    "name": "latexmk_fast",
                    "command": "latexmk",
                    "args": [
                        "-synctex=1", // Enable SyncTeX for source-PDF synchronization
                        "-quiet", // Keep compiling even if there are errors
                        "-pdf", // Generate PDF output
                        "-outdir=%OUTDIR%", // Output directory
                        "%DOC%" // Input file
                    ]
                },
                {
                    "name": "latexmk_rconly",
                    "command": "latexmk",
                    "args": [
                        "-synctex=1", // Enable SyncTeX for source-PDF synchronization
                        "-interaction=nonstopmode", // Keep compiling even if there are errors
                        "-file-line-error", // Show file and line number for errors
                        "-pdf", // Generate PDF output
                        "-outdir=%OUTDIR%", // Output directory
                        "%DOC%" // Input file
                    ]
                },
                {
                    "name": "pdflatex",
                    "command": "pdflatex",
                    "args": [
                        "-synctex=1",
                        "-interaction=nonstopmode",
                        "-file-line-error",
                        "-recorder", // Record dependencies in .fls file
                        "%DOC%"
                    ]
                },
                {
                    "name": "bibtex",
                    "command": "bibtex",
                    "args": [
                        "%DOCFILE%"
                    ] // Process bibliography
                }
            ]
        }
    }
}